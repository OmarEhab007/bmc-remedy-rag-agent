# BMC Remedy RAG Agent - Environment Configuration
# Copy this file to .env and configure for your environment

# Z.AI LLM Configuration
ZAI_API_KEY=your_zai_api_key_here
ZAI_MODEL=glm-4.7
# ZAI_BASE_URL=https://api.z.ai/api/paas/v4/

# PostgreSQL Configuration
POSTGRES_PASSWORD=ragpassword

# BMC Remedy Connection
REMEDY_SERVER=remedy.example.com
REMEDY_PORT=7100
REMEDY_USERNAME=raguser
REMEDY_PASSWORD=your_secure_password

# Optional: Remedy Tuning
REMEDY_SOCKET_TIMEOUT=60000
REMEDY_CHUNK_SIZE=500

# RAG Configuration
RAG_MAX_RESULTS=5
RAG_MIN_SCORE=0.7
RAG_REBAC_ENABLED=true

# Sync Interval (milliseconds)
# Default: 900000 (15 minutes)
SYNC_INTERVAL=900000
